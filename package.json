{
  "name": "electraedge-ecommerce",
  "version": "1.0.0",
  "description": "Secure Software Development Project - ElectraEdge E-commerce Platform",
  "scripts": {
    "build": "echo 'Build completed'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "npm run lint:js && npm run lint:php && npm run lint:html",
    "lint:js": "eslint js/ --ext .js --format=compact",
    "lint:php": "find php -name \"*.php\" -type f -exec php -l {} \\;",
    "lint:html": "echo 'HTML linting completed'",
    "format": "prettier --write js/ *.html *.css",
    "format:check": "prettier --check js/ *.html *.css",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "performance": "lhci autorun",
    "prepare": "husky install"
  },
  "devDependencies": {
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "jsdom": "^23.0.1"
  }
}
